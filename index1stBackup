    #alertBox {
      width: 90%;
      margin: 20px auto;
      padding: 15px;
      font-size: 26px;
      font-weight: bold;
      border-radius: 12px;
      color: white;
      animation: pulse 1.5s infinite;
      display: none;
    }

    @keyframes pulse {
      0% { transform: scale(1); }
      50% { transform: scale(1.05); }
      100% { transform: scale(1); }
    }

    .graph-container {
      display: flex;
      justify-content: center;
      gap: 30px;
      margin-top: 30px;
    }

    .graph-box {
      width: 45%;
      background: white;
      padding: 15px;
      border-radius: 15px;
      box-shadow: 0px 0px 10px #c3c3c3;
    }

    table {
      width: 95%;
      margin: 20px auto;
      border-collapse: collapse;
    }

    th, td {
      border: 1px solid #666;
      padding: 10px;
    }

    th { background: #003366; color: white; }
  </style>
