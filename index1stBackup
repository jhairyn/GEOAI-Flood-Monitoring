  <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-database.js"></script> 

  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f0f6ff;
      text-align: center;
      padding: 20px;
    }

    h1 { color: #003366; }

    .card {
      background: white;
      width: 380px;
      margin: 20px auto;
      padding: 20px;
      border-radius: 15px;
      box-shadow: 0px 0px 10px #c3c3c3;
    }

    #level, #percentage, #rainNow, #rainClass {
      font-size: 42px;
      font-weight: bold;
      margin: 5px 0;
    }

    #height {
      font-size: 28px;
      color: #444;
      margin: 5px 0;
    }

    #time {
      color: #555;
      font-size: 18px;
